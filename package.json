{
  "name": "claude-code-viewer",
  "version": "1.0.0",
  "description": "Claude Code会話ログビューア - JSONLファイルをHTMLで閲覧するElectronアプリ",
  "main": "dist/main/main/main.js",
  "icon": "icon/ClaudeViewer.icns",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode development",
    "build:renderer:prod": "webpack --mode production",
    "watch": "npm run watch:main & npm run watch:renderer",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "watch:renderer": "webpack --mode development --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "dist": "npm run build:main && npm run build:renderer:prod && electron-builder",
    "dist:mac": "npm run build:main && npm run build:renderer:prod && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "claude-code",
    "conversation",
    "viewer",
    "jsonl",
    "html"
  ],
  "author": "Claude Code Viewer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-webpack-plugin": "^5.5.4",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.claudeviewer.app",
    "productName": "Claude Code Viewer",
    "copyright": "Copyright © 2025 Claude Code Viewer",
    "directories": {
      "output": "dist/build"
    },
    "files": [
      "dist/**/*",
      "!dist/build/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": {
        "target": "dmg",
        "arch": "universal"
      },
      "icon": "icon/ClaudeViewer.icns",
      "minimumSystemVersion": "10.15.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "mergeASARs": true
    },
    "dmg": {
      "title": "Claude Code Viewer ${version}",
      "icon": "icon/ClaudeViewer.icns",
      "background": null,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "icon/ClaudeViewer.ico"
    }
  }
}

{
  "name": "claude-code-viewer",
  "version": "1.0.0",
  "description": "Claude Code会話ログビューア - JSONLファイルをHTMLで閲覧するElectronアプリ",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer && npm run copy:assets",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy:assets": "cp src/renderer/*.html src/renderer/*.css dist/renderer/renderer/",
    "watch": "npm run watch:main & npm run watch:renderer",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "watch:renderer": "tsc -p tsconfig.renderer.json -w",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "claude-code",
    "conversation",
    "viewer",
    "jsonl",
    "html"
  ],
  "author": "Claude Code Viewer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.example.claude-code-viewer",
    "productName": "Claude Code Viewer",
    "directories": {
      "output": "dist/build"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "claude-code-viewer"
    }
  }
}